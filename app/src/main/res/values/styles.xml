<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextStyle" parent="@android:style/TextAppearance.Medium">

        <item name="android:textColor">#4e4e4e</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="AppTheme.Dark" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightSilver</item>
        <item name="colorPrimary">#434242</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF8A65</item>
        <item name="android:textColor">#fdfdfd</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#2E7D32</item>
        <item name="colorPrimaryDark">#1B5E20</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColor">#fdfdfd</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:textColor">#fdfdfd</item>
    </style>

    <style name="AppTheme.Silver" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/DarkSilver</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">#FF4081</item>

    </style>
</resources>
